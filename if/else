function setup() {
	createCanvas(windowWidth, windowHeight);
	background(0)

}

function draw() {

	background(255, 255, 255);

	if(mouseY>=height/2 && mouseX<=width/2)  
    fill(0, 74, 173);
	
    else if(mouseY<height/2 && mouseX<=width/2) 
    fill(232,36,36);
  	
    else if(mouseY<height/2 && mouseX>width/2) 
    fill(0,128,55); 

	else{
		 noFill();
	}

	stroke(0);
	strokeWeight(1);
	circle(width / 2, height / 2, height / 4);


}
